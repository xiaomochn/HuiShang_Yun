<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <View style="@style/used_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/h_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/width_2_80" >

        <ImageView
            android:id="@+id/img_groupdata_line_icon1"
            style="@style/used_min_4"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/hello_world"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_profile_tel" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_groupdata_line_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:textColor="@color/theme"
                android:textSize="@dimen/text_4" />

            <TextView
                android:id="@+id/tv_groupdata_line_telnums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:textColor="@color/m_black"
                android:textSize="@dimen/text_4" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_groupdata_line_icon2"
            style="@style/used_min_4"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/hello_world"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_totel" />
    </LinearLayout>

</LinearLayout>