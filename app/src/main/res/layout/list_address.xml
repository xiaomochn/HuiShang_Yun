<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    
    <View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:id="@+id/view"/> 
    <!-- 收货地址 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"      	        
        android:background="@drawable/kuang_black"
        android:padding="0.5dp"
        android:layout_below="@id/view"
		android:id="@+id/middle">
		<TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:text="收货人："
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="#646464"
            android:id="@+id/name"/>	       
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:text="收货地址："
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="#646464"
            android:id="@+id/address"/>			
		<View
		    android:layout_height="0.5dp"
		    android:layout_width="match_parent"
		    android:background="#e0e0e0"/>
		
		<RelativeLayout
		    android:layout_height="50dp"
		    android:layout_width="match_parent">
            <!-- 设为默认地址 -->
		    <LinearLayout android:id="@+id/moren"
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:gravity="center_vertical"
		        android:background="@drawable/list_bt"
		        android:paddingLeft="10dp"
            	android:paddingRight="10dp">
			    <ImageView
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:src="@drawable/moren"
			        android:id="@+id/img1"/>
			    <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:text="默认地址"
		            android:textSize="15sp"
		            android:textColor="#969696"

		            android:id="@+id/tv1"/>	
	        </LinearLayout>
	        
		    <!-- 删除 -->
		    <LinearLayout android:id="@+id/del"
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:gravity="center_vertical"
		        android:background="@drawable/list_bt"
		        >
			    <ImageView
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:src="@drawable/shanchu"
			        android:id="@+id/img3"/>
			    <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:text="删除"
		            android:textSize="15sp"
		            android:textColor="#969696"
		            android:id="@+id/tv3"/>	
	        </LinearLayout>
	        
		    <!-- 编辑 -->
		    <LinearLayout android:id="@+id/bianji"
		        android:layout_height="match_parent"
		        android:layout_width="wrap_content"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_centerInParent="true"
		        android:gravity="center_vertical"
		        android:layout_toLeftOf="@id/del"
		        android:layout_marginRight="30dp"
		        android:background="@drawable/list_bt">
			    <ImageView
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:src="@drawable/bianji"
			        android:id="@+id/img2"/>
			    <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:text="编辑"
		            android:textSize="15sp"
		            android:textColor="#969696"
		            android:id="@+id/tv2"/>	
	        </LinearLayout>
       </RelativeLayout>	
	</LinearLayout>
	
	<View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_below="@id/middle"/>  
</RelativeLayout>