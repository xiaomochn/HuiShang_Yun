<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/title_work"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame_head_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_title_work_back"
        style="@style/used_min_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_2_80"
        android:contentDescription="@string/hello_world"
        android:padding="@dimen/width_2_80"
        android:src="@drawable/head_back" />

    <View
        style="@style/used_vertical_line"
        android:layout_marginLeft="@dimen/width_2_80"
        android:background="@color/h_Transparent" />

    <TextView
        android:id="@+id/tv_title_work_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_marginRight="@dimen/width_8_80"
        android:textSize="@dimen/text_8"
        android:text="@string/hello_world"
        android:textColor="@color/h_white" />

    <LinearLayout
        style="@style/used_width_match"
        android:gravity="right|center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_title_work_icon"
            style="@style/used_min_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/width_4_80"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/icon_save"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>