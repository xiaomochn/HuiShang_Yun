<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/back_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:background="#ffffff" >

            <!-- 任务主题 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务主题"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/task_add_theme"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:singleLine="true"
                    android:maxLines="25"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <!-- 开始日期 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始日期"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/task_add_start_date"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:paddingLeft="15dp"
                    android:textColor="#969696"
                    android:singleLine="true"
                    android:paddingRight="5dp"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <!-- 结束日期 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束日期"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/task_add_end_date"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:singleLine="true"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <!-- 优先级 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优先级"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/task_add_priority"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:singleLine="true"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <!-- 执行人 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执行人"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/task_add_executor"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:singleLine="true"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <!-- 关联客户 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关联客户"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/task_add_customers"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:singleLine="true"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <!-- 关联商机 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关联商机"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/task_add_opportunities"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:singleLine="true"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <!-- 任务描述 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/task_add_description"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/edt_note"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:hint="任务描述(必填)"
                    android:paddingLeft="15dp"
                    android:paddingRight="17dp"
                    android:textColor="#969696"
                    android:maxLength="200"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />
            </LinearLayout>
           
        </LinearLayout>
    </ScrollView>
	 <!-- 提交 -->
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#f0f0f0">
           <Button
               android:id="@+id/task_add_submit"
               android:layout_width="fill_parent"
               android:layout_height="40dp"
               android:layout_margin="15dp"
               android:background="@drawable/button_tuch"
               android:textColor="#fff"
               android:textSize="18sp"
               android:lineSpacingMultiplier="1.2"
               android:text="提交"/>
          </LinearLayout>
</LinearLayout>