<?xml version="1.0" encoding="utf-8"?>
<!-- 选择产品中的分类 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_letter"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="分类"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <com.huishangyun.View.RoundAngleImageView
            android:id="@+id/product_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/login_default_avatar" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/visit_right" />

        <TextView
            android:id="@+id/txt_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/product_head"
            android:gravity="center_vertical"
            android:text="碳酸饮料"
            android:textColor="#646464"
            android:textSize="16sp" />
    </RelativeLayout>

   <RelativeLayout
        android:id="@+id/stock_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/line"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/stock_line_no"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="75dip"
        android:background="@drawable/line"
        android:visibility="gone" />

</LinearLayout>