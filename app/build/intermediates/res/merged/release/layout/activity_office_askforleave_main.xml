<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/head_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00658f" >

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/title_background" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/headname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:paddingRight="15dp"
                android:text="请假"
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>
    <RelativeLayout 
             android:id="@+id/add"
           android:layout_width="50dp"
           android:layout_height="match_parent"
            android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
            android:background="@drawable/title_background">
         <ImageView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/add1" /> 
          </RelativeLayout>
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView 
            android:id="@+id/allaskforleave"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#00658f"
            android:text="全部"/>
         <TextView 
            android:id="@+id/myaskforleave"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#646464"
            android:text="我的请假"/>
         
          <TextView 
            android:id="@+id/departmentaskforleave"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#646464"
            android:text="部门请假"/>
          
         
        
    </LinearLayout>
    
      <ImageView   
        android:id="@+id/cursor"  
        android:layout_width="@dimen/width_27_80"  
        android:layout_height="wrap_content"  
        android:layout_marginTop="-2dp"
        android:scaleType="matrix"
        android:background="#ff00658f"/>
        
     
      
    <android.support.v4.view.ViewPager  
        android:id="@+id/viewpager"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:flipInterval="30"  
        android:persistentDrawingCache="animation"/>  

</LinearLayout>
