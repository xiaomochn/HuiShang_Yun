<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <!-- 证件编号 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:text="证件编号"
		    android:textSize="16sp"
		    android:textColor="#646464"/>	
	   	
		<EditText
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:paddingTop="15dp"
    		android:paddingBottom="15dp"
    		android:paddingRight="15dp"
    		android:paddingLeft="5dp"
		    
		    android:background="@null"
		    android:gravity="right"
		    android:textColor="#969696"
		    android:textSize="15sp"
		    android:maxLength="50"
		    android:singleLine="true"
		    android:id="@+id/item03_01"/>
	</LinearLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
	<!-- 客户编号 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:text="客户编号"
		    android:textSize="16sp"
		    android:textColor="#646464"/>	
	   	
		<EditText
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:paddingTop="15dp"
    		android:paddingBottom="15dp"
		    android:paddingRight="15dp"
    		android:paddingLeft="5dp"
    		
		    android:background="@null"
		    android:gravity="right"
		    android:textColor="#969696"
		    android:textSize="15sp"
		    android:maxLength="50"
		    android:singleLine="true"
		    android:id="@+id/item03_02"/>
	</LinearLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
	<!-- 经营渠道 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="经营渠道"
		    android:textSize="16sp"
		    android:textColor="#646464"/>	
   	    	
		<EditText
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:paddingTop="15dp"
    		android:paddingBottom="15dp"
		    android:paddingRight="15dp"
    		android:paddingLeft="5dp"
    		
		    android:background="@null"
		    android:gravity="right"
		    android:textColor="#969696"
		    android:textSize="15sp"
		    android:maxLength="50"
		    android:singleLine="true"
		    android:id="@+id/item03_03"/>
	</LinearLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
    <!-- 辐射范围 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="辐射范围"
		    android:textSize="16sp"
		    android:textColor="#646464"/>	
    	
		<EditText
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:paddingTop="15dp"
    		android:paddingBottom="15dp"
		    android:paddingRight="15dp"
    		android:paddingLeft="5dp"
    		
		    android:background="@null"
		    android:gravity="right"
		    android:textColor="#969696"
		    android:textSize="15sp"
		    android:maxLength="50"
		    android:singleLine="true"
		    android:id="@+id/item03_04"/>
	</LinearLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
    <!-- 上级经销商 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    	<TextView android:id="@+id/tv_shangji"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="上级经销商"
		    android:textSize="16sp"
		    android:textColor="#646464"/>	
    	    	  	
		<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:paddingTop="15dp"
    		android:paddingBottom="15dp"
    		android:paddingRight="15dp"
    		android:paddingLeft="5dp"
    		
		    android:gravity="right"
		    android:textColor="#969696"
		    android:textSize="15sp"
		    android:maxLength="50"
		    android:singleLine="true"
		    android:id="@+id/item03_05"/>
		
		<ImageView android:id="@+id/img004"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginRight="15dp"
		    android:src="@drawable/right"/>
	</LinearLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
    <!-- 合作品牌 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="合作品牌"
		    android:textSize="16sp"
		    android:textColor="#646464"/>	
    	
		<EditText
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:paddingTop="15dp"
    		android:paddingBottom="15dp"
		    android:paddingRight="15dp"
    		android:paddingLeft="5dp"
    		
		    android:background="@null"
		    android:gravity="right"
		    android:textColor="#969696"
		    android:textSize="15sp"
		    android:maxLength="50"
		    android:singleLine="true"
		    android:id="@+id/item03_06"/>
	</LinearLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
	<!-- 照片 -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
    	android:paddingBottom="5dp">
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="照片"
		    android:textSize="16sp"
		    android:textColor="#646464"
		    android:id="@+id/tv"/>	
		<LinearLayout
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:layout_toRightOf="@id/tv"
		    android:layout_marginLeft="30dp">
			<ImageView
			    android:layout_height="60dp"
			    android:layout_width="60dp"
			    android:src="@drawable/visit_img"
			    android:id="@+id/item03_img01"/>
			<ImageView
			    android:layout_height="60dp"
			    android:layout_width="60dp"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/visit_img"
			    android:id="@+id/item03_img02"/>
			<ImageView
			    android:layout_height="60dp"
			    android:layout_width="60dp"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/visit_img"
			    android:id="@+id/item03_img03"/>
		</LinearLayout>
		
	</RelativeLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
	<!-- 定位 -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="15dp"
    	android:paddingBottom="15dp">
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="定位"
		    android:textSize="16sp"
		    android:textColor="#646464"
		    android:id="@+id/tv_dingwei"/>	
	
		<LinearLayout
		    android:layout_height="match_parent"
		    android:layout_width="wrap_content"
		    android:layout_alignParentRight="true"
		    android:gravity="center_vertical|right"
		    android:layout_marginRight="15dp"
		    android:layout_marginLeft="25dp"
		    android:paddingLeft="5dp"
		    android:layout_toRightOf="@id/tv_dingwei"
		    android:id="@+id/dingwei">
			<ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:src="@drawable/visit_check_position"
			    android:id="@+id/dingwei_img"/>
			
			<com.huishangyun.View.MarqueeText
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:hint="GPS定位"
			    android:textColorHint="#e1e1e1"
			    android:textColor="#969696"
		    	android:textSize="15sp"
		    	android:maxLength="50"
		    	android:id="@+id/dingwei_address"
		    	
		    	android:singleLine="true"
                android:ellipsize="marquee"
        		android:focusable="true"
        		android:marqueeRepeatLimit="marquee_forever"
        		android:focusableInTouchMode="true"
        		android:scrollHorizontally="true"/><!-- 文本框不够显示全部允许水平滚动。 -->
			      		
			<ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:src="@drawable/right"
			    android:id="@+id/img007"/>
		</LinearLayout>
	</RelativeLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginLeft="15dp"/>
	
	<!-- 备注 -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
    	android:paddingBottom="5dp">
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="备注"
		    android:textSize="16sp"
		    android:textColor="#646464"
		    android:id="@+id/beizhu"/>	
		<EditText
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:layout_toRightOf="@id/beizhu"
		    android:layout_marginRight="15dp"
		    android:background="@drawable/edt_note"
		    android:layout_marginLeft="30dp"
		    android:gravity="top"
		    android:padding="5dp"
		    android:layout_centerVertical="true"
		    android:lines="5"		    
		    android:textColor="#969696"
		    android:textSize="15sp"
		    android:maxLength="200"
		    android:id="@+id/item03_07"/>	
	</RelativeLayout>
	<View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#e0e0e0"
        android:layout_marginBottom="15dp"/>
</LinearLayout>
