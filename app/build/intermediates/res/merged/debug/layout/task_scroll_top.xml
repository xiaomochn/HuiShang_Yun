<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:background="#fff"
    android:id="@+id/task_scroll_layout"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/task_all"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:text="全部"
            android:textColor="@drawable/text_select"
            android:textSize="17sp" />

        <Button
            android:id="@+id/task_launch"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:text="我发起的"
            android:textColor="@drawable/text_select"
            android:textSize="17sp" />

        <Button
            android:id="@+id/task_accepted"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:textColor="@drawable/text_select"
            android:textSize="17sp" />
    </LinearLayout>
    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="3dp">
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#e0e0e0"/>
    <ImageView 
        android:id="@+id/task_line"
        android:layout_width="@dimen/width_26_80"
        android:layout_height="3dp"
        android:background="#ff00658f"/>
    </FrameLayout>

</LinearLayout>