<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:alpha="0.9">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        
    
    <LinearLayout 
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout 
            android:id="@+id/menu_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <!-- <LinearLayout 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/menu_call"
                android:gravity="center">
                <ImageView
		            android:layout_width="20dp"
		            android:layout_height="20dp"
		            android:src="@drawable/adbook_call"/>
            </LinearLayout> -->
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/adbook_call"/>
            
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="打电话"/>
        </LinearLayout>
       
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout 
            android:id="@+id/menu_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
           <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/adbook_texting"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="发短信"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout 
            android:id="@+id/menu_send_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
           <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/adbook_chat"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="发起聊天"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
