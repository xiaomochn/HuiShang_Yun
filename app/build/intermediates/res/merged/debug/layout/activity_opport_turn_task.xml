<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0" 
     android:orientation="vertical"
    >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#00658f" >

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/title_background" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:paddingRight="15dp"
                    android:text="转任务"
                    android:textColor="#ffffff"
                    android:textSize="21sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0.0dp" 
             android:layout_weight="1.0"
             >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"               
                android:background="#ffffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <!-- 客户 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户"
                        android:textColor="#646464"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/create_opport_customer"
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="南昌索科特科技有限公司"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:textColor="#c8c8c8"
                        android:textColorHint="#c8c8c8"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c8c8c8" />

                <!-- 主题 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主题"
                        android:textColor="#646464"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/create_opport_theme"
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="采购办电脑"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:textColor="#c8c8c8"
                        android:textColorHint="#c8c8c8"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c8c8c8" />

                <!-- 阶段 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阶段"
                        android:textColor="#646464"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/create_opport_stage"
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="初步沟通"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:textColor="#c8c8c8"
                        android:textColorHint="#c8c8c8"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c8c8c8" />

                <!-- 金额 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金额"
                        android:textColor="#646464"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/create_opport_money_sum"
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="¥1,500.00"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:textColor="#c8c8c8"
                        android:textColorHint="#c8c8c8"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#c8c8c8" />

                <!-- 描述 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述"
                        android:textColor="#646464"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/create_opport_description"
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/edt_note"
                        android:gravity="right|center_vertical"
                        android:hint="做公司网站"
                        android:paddingLeft="15dp"
                        android:paddingRight="17dp"
                        android:textColor="#c8c8c8"
                        android:textColorHint="#c8c8c8"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--
                 <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#c8c8c8" />
                -->

            </LinearLayout>
        </ScrollView>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_weight="0.02"
    android:gravity="center" >

    <!-- 提交 -->

    <Button
        android:id="@+id/create_opport_submit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/button_tuch"
        android:lineSpacingMultiplier="1.2"
        android:text="提 交"
        android:textColor="#fff"
        android:textSize="18sp" />
</LinearLayout>
</LinearLayout>