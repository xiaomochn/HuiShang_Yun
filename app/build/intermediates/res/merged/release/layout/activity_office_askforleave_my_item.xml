<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <!-- 所属日期 -->
    <RelativeLayout 
        android:id="@+id/datelayout"
         android:layout_width="fill_parent"
         android:layout_height="45dp">
         
        <RelativeLayout 
            android:id="@+id/top_line"
            android:layout_width="1px"
            android:layout_height="13dp"
            android:layout_marginLeft="32dp"
            android:background="#e0e0e0"/>
           
              <RelativeLayout 
                android:id="@+id/txt_visit_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                
             <TextView
                 android:id="@+id/belongdate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
            	 android:layout_marginLeft="25dp"
                 android:background="@drawable/textview_dateshow"
            	 android:paddingLeft="17dp"
            	 android:paddingRight="8dp"
           	     android:text="2014年08月17号"
            	 android:textColor="#ffffff"
            	 android:textSize="13sp" 
            	 android:layout_centerVertical="true" />
             
               <TextView 
                   android:layout_width="4dp"
                   android:layout_height="4dp"
                    android:layout_marginLeft="30dp"
                   android:background="@drawable/textview_radius"
                    android:layout_centerVertical="true"/>
            	 </RelativeLayout>
            	
        <RelativeLayout
            android:id="@+id/visit_bottom_line"
            android:layout_width="1px"
            android:layout_height="13dp"
            android:layout_marginLeft="32dp"
            android:background="#e0e0e0" 
            android:layout_below="@+id/txt_visit_layout"
           />
           
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <!-- 开始日期 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="10dp" >
           

            <TextView
                android:id="@+id/txt_visit_client"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="始"
                android:gravity="center"
                android:background="@drawable/leave_startime"
                android:textColor="#ffffff"
                android:textSize="13sp" />
           
            <TextView
                android:id="@+id/startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2014-11-04"
                android:textSize="13sp"
                android:textColor="#646464" >
            </TextView>
        </LinearLayout>
        
        <!-- 结束日期-->

       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >
           

            <TextView
               
                 android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="终"
                 android:gravity="center"
                android:background="@drawable/leave_endtime"
                android:textColor="#ffffff"
                android:textSize="13sp" />
           
            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2014-11-04"
                android:textSize="13sp"
                android:textColor="#646464" >
            </TextView>
        </LinearLayout>
        
      <View 
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e0e0e0"/>
        
        <!-- 请假内容 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/askforleave_note"/>

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结果看对方看得开古井贡酒结果空旷的结果看得开广告费好好"
                android:textColor="#646464"
                android:layout_marginLeft="5dp"
                android:maxLength="100"
                android:textSize="13sp" />
        </LinearLayout>
        
       
    
        
    </LinearLayout>

</LinearLayout>