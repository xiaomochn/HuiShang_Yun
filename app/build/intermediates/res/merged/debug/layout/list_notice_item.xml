<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"	
    android:orientation="vertical"
    android:padding="@dimen/width_3_80" >
    
    <TextView android:id="@+id/list_notice_title"
        style="@style/used_width_match"	android:textSize="@dimen/text_6"
        android:textIsSelectable="true" />
    
    <LinearLayout
        style="@style/used_width_match"	android:orientation="horizontal"
        android:layout_marginTop="@dimen/width_2_80">
        <TextView android:id="@+id/list_notice_company"
            style="@style/used_wrap"	android:textIsSelectable="true"
            android:textColor="@color/theme" android:textSize="@dimen/text_4" />
        <TextView  android:id="@+id/list_notice_date"
            style="@style/used_width_match"	android:textIsSelectable="true"
            android:textSize="@dimen/text_4" android:gravity="right"/>
	</LinearLayout>
	
</LinearLayout>