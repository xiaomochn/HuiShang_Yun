<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >
    
    <!-- 头 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00658f" >

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/title_background" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:paddingRight="15dp"
                android:text="日报详情"
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <!-- 周一 -->

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/week1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="周一"
                android:textColor="#646464"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- 周二 -->

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/week2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="周二"
                android:textColor="#646464"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- 周三 -->

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/week3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="周三"
                android:textColor="#646464"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- 周四 -->

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/week4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="周四 "
                android:textColor="#646464"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- 周五 -->

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/week5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="周五"
                android:textColor="#646464"
                android:textSize="15sp" />
        </LinearLayout>
        <!-- 周六 -->

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/week6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="周六"
                android:textColor="#646464"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- 周日 -->

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" >

            <TextView
                android:id="@+id/week7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="周日"
                android:textColor="#646464"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/date1_bg"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:background="#05cc76"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableBottom="@drawable/summarydetail_dot"
                android:text="01"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        
        </LinearLayout>
        
        <LinearLayout
             android:id="@+id/date2_bg"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableBottom="@drawable/summarydetail_dot"
                android:text="02"
                android:textColor="#646464"
                android:textSize="15sp" />
        
        </LinearLayout>
        
         <LinearLayout
              android:id="@+id/date3_bg"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/date3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableBottom="@drawable/summarydetail_dot"
                android:text="03"
                android:textColor="#646464"
                android:textSize="15sp" />
        
        </LinearLayout>

        <LinearLayout
             android:id="@+id/date4_bg"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/date4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableBottom="@drawable/summarydetail_dot"
                android:text="04"
                android:textColor="#646464"
                android:textSize="15sp" />
        
        </LinearLayout>

        <LinearLayout
             android:id="@+id/date5_bg"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/date5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableBottom="@drawable/summarydetail_dot"
                android:text="05"
                android:textColor="#646464"
                android:textSize="15sp" />
        
        </LinearLayout>

        <LinearLayout
             android:id="@+id/date6_bg"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/date6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableBottom="@drawable/summarydetail_dot"
                android:text="06"
                android:textColor="#646464"
                android:textSize="15sp" />
        
        </LinearLayout>

       <LinearLayout
            android:id="@+id/date7_bg"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/date7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableBottom="@drawable/summarydetail_dot"
                android:text="07"
                android:textColor="#646464"
                android:textSize="15sp" />
        
        </LinearLayout>
    </LinearLayout>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />
    
    <ImageView
        android:id="@+id/cursor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:scaleType="matrix"
        android:src="@drawable/approval_line" 
        android:visibility="gone"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>