<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="55dp"
         android:background="@drawable/contact_item_select">
    <FrameLayout 
        android:id="@+id/app_icon_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:src="@drawable/contact_group"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
	        android:id="@+id/app_unreadmsg"
	        android:layout_width="15dp"
	        android:layout_height="15dp"
	        android:background="@drawable/scree_prompt"
	        android:gravity="center"
	        android:includeFontPadding="false"
	        android:shadowColor="#19000000"
	        android:shadowDy="1.0"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:shadowRadius="1.0"
	        android:text="99+"
	        android:visibility="gone"
	        android:textColor="#ffffffff"
	        android:textSize="8dip" />
    </RelativeLayout>
	</FrameLayout>
	
    <TextView 
        android:id="@+id/app_name"
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#646464"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/app_icon_layout"
        android:layout_marginLeft="10dp"/>
    
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:layout_alignParentBottom="true"
	    android:background="#e0e0e0"/>
	</RelativeLayout>
</RelativeLayout>
