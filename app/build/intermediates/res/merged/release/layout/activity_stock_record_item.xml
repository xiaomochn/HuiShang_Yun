<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
   >

    <!-- 今天 -->
    
    <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="45dp">
         
        <RelativeLayout 
            android:id="@+id/stock_record_top_line"
            android:layout_width="1px"
            android:layout_height="13dp"
            android:layout_marginLeft="32dp"
            android:background="#e0e0e0"/>
           
             <TextView
                 android:id="@+id/txt_stock_date"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
            	 android:layout_marginLeft="25dp"
                 android:background="@drawable/visit_time_bg"
            	 android:paddingLeft="17dp"
            	 android:paddingRight="8dp"
           	     android:text="2014年08月17号"
            	 android:textColor="#ffffff"
            	 android:textSize="13sp" 
            	 android:layout_centerVertical="true" />
            	 
        <RelativeLayout
            android:id="@+id/stock_record_bottom_line"
            android:layout_width="1px"
            android:layout_height="13dp"
            android:layout_marginLeft="32dp"
            android:background="#e0e0e0" 
            android:layout_below="@+id/txt_stock_date"
           />
           
    </RelativeLayout>


    <!-- 产品、数量及单位 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical" 
        android:background="#ffffff"
       >
        
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/stock_record_product"
                android:layout_width="188dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:gravity="center"
                android:singleLine="true"
                android:text="产品"
                android:textColor="#646464"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

            <TextView
                android:id="@+id/stock_record_amount_unit"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:text="数量/单位"
                android:textColor="#646464"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="188dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:gravity="center"
                android:singleLine="true"
                android:text="王来吉"
                android:textColor="#646464"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:text="3箱"
                android:textColor="#646464"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="188dp"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:gravity="center"
                android:singleLine="true"
                android:text="王来吉"
                android:textColor="#646464"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:text="3箱"
                android:textColor="#646464"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:background="#e0e0e0" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />

<!-- 登录名及提交时间 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp" >

        <View
            android:layout_width="0.5dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:background="#e0e0e0" />
        <ImageView
            android:id="@+id/img_stock_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/visit_head" />

        <TextView
            android:id="@+id/txt_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_stock_head"
            android:text="登录名"
            android:textColor="#c8c8c8"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_stock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="2014-7-31  11:16"
            android:textColor="#c8c8c8"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img_stock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/txt_stock_time"
            android:src="@drawable/visit_time" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="36dp"
            android:background="#e0e0e0"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

       <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" 
            />
        
    </LinearLayout>

</LinearLayout>