<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout android:id="@+id/lin_start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
     <Chronometer android:id="@+id/tv_start"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="20dp"/>
     <ImageView android:id="@+id/img_start"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="30dp"
         android:src="@drawable/record_start"/>
    </LinearLayout>
	        
    <!-- 正在录音 -->
    <LinearLayout android:id="@+id/lin_end"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
     <TextView android:id="@+id/tv_end"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="20dp"/>
     
     <ImageView android:id="@+id/img_end"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="30dp"
         android:src="@drawable/record_end"/>
     <View
      android:layout_height="1dp"
      android:layout_width="match_parent"
      android:background="#e0e0e0"/>
     <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent">
         <TextView android:id="@+id/cancel"
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:gravity="center"
             android:paddingTop="15dp"
             android:paddingBottom="15dp"
             android:text="取消"
             android:textColor="#f97c01"/>
         <View
       android:layout_height="match_parent"
       android:layout_width="1dp"
       android:background="#e0e0e0"/>
         <TextView android:id="@+id/confirm"
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:gravity="center"
             android:paddingTop="15dp"
             android:paddingBottom="15dp"
             android:text="确定"
             android:textColor="#f97c01"/>
     </LinearLayout>
    </LinearLayout>
</LinearLayout>
