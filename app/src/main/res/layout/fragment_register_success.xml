<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:background="#f0f0f0" >
    <EditText 
        android:id="@+id/register_company_name"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:textColor="#646464"
        android:textColorHint="#969696"
        android:textSize="17sp"
        android:gravity="center"
        android:hint="公司名称"
        android:background="@drawable/register_edit_bg"/>
    
    <EditText 
        android:id="@+id/register_domain"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textColor="#646464"
        android:textColorHint="#969696"
        android:textSize="17sp"
        android:digits="@string/inputtype"
        android:gravity="center"
        android:hint="域名(建议输入公司名称拼音简称)"
        android:background="@drawable/register_edit_bg"/>
    
    <EditText 
        android:id="@+id/register_password"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textColor="#646464"
        android:inputType="textPassword"
        android:textColorHint="#969696"
        android:textSize="17sp"
        android:maxLength="12"
        android:gravity="center"
        android:hint="管理员密码"
        android:background="@drawable/register_edit_bg"/>
    
    
    <Button
        android:id="@+id/register_submit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_background"
        android:textColor="#fff"
        android:textSize="17sp"
        android:lineSpacingMultiplier="1.2"
        android:text="提交"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <CheckBox 
            android:id="@+id/register_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="@drawable/register_chek"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:text="阅读并同意"/>
        <TextView 
            android:id="@+id/register_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#21a5de"
            android:textSize="12sp"
            android:text="服务条款"/>
    </LinearLayout>

</LinearLayout>
