        <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
    	android:paddingBottom="5dp">
    	<TextView
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:text="照片"
		    android:textSize="16sp"
		    android:textColor="#646464"
		    android:id="@+id/txt_display_photo"/>	
		<LinearLayout
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:layout_toRightOf="@id/txt_display_photo"
		    android:layout_marginLeft="30dp">
			<ImageView
			    android:layout_height="60dp"
			    android:layout_width="60dp"
			    android:src="@drawable/visit_img"
			    android:id="@+id/display_new_photo1"/>
			<ImageView
			    android:layout_height="60dp"
			    android:layout_width="60dp"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/visit_img"
			    android:id="@+id/display_new_photo2"/>
			<ImageView
			    android:layout_height="60dp"
			    android:layout_width="60dp"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/visit_img"
			    android:id="@+id/display_new_photo3"/>
		</LinearLayout>
		
	</RelativeLayout>

