<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#166b91"/>
    <LinearLayout 
        android:id="@+id/custormer_pop_group"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title_background">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/customer_menu_group"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="分组"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#166b91"/>
    <LinearLayout 
        android:id="@+id/custormer_pop_rating"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title_background">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/customer_menu_prog"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="等级"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#166b91"/>
    <LinearLayout 
        android:id="@+id/custormer_pop_type"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title_background">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/customer_menu_type"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="状态"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>
