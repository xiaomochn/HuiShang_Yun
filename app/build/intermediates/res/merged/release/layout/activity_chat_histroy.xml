<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_hostroy_lins"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_service_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:gravity="center"
            android:text="下午 11:13"
            android:textColor="#fff"
            android:background="@drawable/chat_size_select"
            android:textSize="@dimen/text_1" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rev_lefts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
       >

        <!--<com.huishangyun.Util.RoundImageView-->
            <!--android:id="@+id/chat_right_img"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:src="@drawable/approval" />-->
        <ImageView
            android:id="@+id/chat_hostroy_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/approval" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/rev_lefts"
        android:layout_marginRight="15dp"
        android:background="@drawable/chat_service_norl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_hostroy_FlowName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="小明的请假"
            android:textColor="#00658f"
            android:textSize="@dimen/text_7" />

        <TextView
            android:id="@+id/chat_hostroy_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="标题"
            android:textColor="#999999"
            android:textSize="@dimen/text_3" />

        <TextView
            android:id="@+id/chat_hostroy_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="7月2号"
            android:textColor="#969696"
            android:textSize="@dimen/text_2" />

        <ImageView
            android:id="@+id/chat_hostroy_images"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/width_3_80"
            android:adjustViewBounds="true"
            android:src="@drawable/chat_service_load" />

        <!--<TextView-->
        <!--android:id="@+id/chat_service_body"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:text="内容"-->
        <!--android:textColor="#969696"-->
        <!--android:visibility="gone"-->
        <!--android:textSize="@dimen/text_5" />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="5dp"
            android:background="#cccccc"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="查看详情"
                android:textColor="#000000"
                android:textSize="@dimen/text_3" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/visit_jiaotou"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
