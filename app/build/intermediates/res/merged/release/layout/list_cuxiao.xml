<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:id="@+id/view"/>
    
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
	    android:background="@drawable/list_background"
	    android:layout_below="@id/view"
	    android:id="@+id/middle">	         
    <ImageView
		  android:layout_height="wrap_content"
		  android:layout_width="wrap_content"
		  android:src="@drawable/product"
		  android:layout_centerVertical="true"
		  android:id="@+id/img"/>
	 
    <!-- 产品名称 -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/img"
   		android:layout_alignTop="@id/img"
   		
    	android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:id="@+id/name"
        android:lines="1"
        android:text="润田翠天然含硒矿泉水润田翠天然含硒矿泉水润田翠天然含硒矿泉水润田翠天然含硒矿泉水"
        android:textSize="16sp"
        android:textColor="#646464"/>
    
     <!-- 时间 -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/name"
 		android:layout_alignLeft="@id/name"
 		
        android:id="@+id/time"
        android:text="结束时间：2014-7-16"
        android:textSize="12sp"
        android:textColor="#c8c8c8"/>
    
     <!-- 促销文字 -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/time"
 		android:layout_alignLeft="@id/time"
 		
        android:id="@+id/cuxiao"
        android:text="先到先得，卖完为止"
        android:textSize="12sp"
        android:textColor="#ff0000"/>
    
    
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/cuxiao"
 		android:layout_alignLeft="@id/cuxiao"
 		android:layout_marginRight="15dp">	    
	    <!-- 价格 -->
	    <TextView
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"		
	        android:layout_centerVertical="true"        		 		
	        android:id="@+id/price"
	        android:text="￥45.00"
	        android:textSize="14sp"
	        android:textColor="#21a5de"/>
	   
	     <!-- 购物车 -->
	    <ImageView
		    android:layout_height="30dp"
		    android:layout_width="30dp"
		    android:layout_alignParentRight="true"	
		    android:layout_centerVertical="true"
		    android:src="@drawable/shopping_car_grey"
		    android:scaleType="center"
		    android:id="@+id/imgcar"/>
    </RelativeLayout>
	    
	</RelativeLayout>
	
	<View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_below="@id/middle"/>
</RelativeLayout>