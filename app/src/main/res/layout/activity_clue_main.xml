<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:umadsdk="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/head_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00658f"
        >
        <RelativeLayout 
            android:id="@+id/back_mian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/title_background">
       <ImageView          
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/back"
           android:layout_marginLeft="15dp"
           android:layout_centerVertical="true"
           />
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="线索"
           android:textColor="#ffffff"
           android:textSize="21sp"
           android:paddingRight="15dp"
            android:layout_centerVertical="true"
           android:layout_marginLeft="40dp"/>
       </RelativeLayout>
       
       <RelativeLayout 
           android:id="@+id/search"
           android:layout_width="45dp"
           android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@+id/addclue"
            android:background="@drawable/title_background">
       <ImageView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/research" />
      </RelativeLayout>
      
        <RelativeLayout 
             android:id="@+id/addclue"
           android:layout_width="50dp"
           android:layout_height="match_parent"
            android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:gravity="center"
            android:background="@drawable/title_background">
         <ImageView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add1" /> 
          </RelativeLayout>
    </RelativeLayout>

  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"> 
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="全部"
            android:textColor="#00658f"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="我的线索"
            android:textColor="#646464"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="部门线索"
            android:textColor="#646464"
            android:textSize="17sp" />
    </LinearLayout>
  
	<FrameLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="3dp"
	    android:layout_marginTop="-3dp">
	    
	    <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_gravity="bottom"
	        android:background="#e0e0e0"/>
	    <ImageView
	        android:id="@+id/cursor"
	        android:layout_width="@dimen/width_27_80"
	        android:layout_height="3dp"
	        android:scaleType="matrix"
            android:background="#ff00658f"/>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#c8c8c8"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
    
 </LinearLayout>
 


</LinearLayout>