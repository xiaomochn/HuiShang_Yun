<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <!-- 头 -->

    <RelativeLayout
        android:id="@+id/head_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00658f" >

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/title_background" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/headname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:paddingRight="15dp"
                android:text="新增出差"
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <!-- 出发地点 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/business_depcity"
                    android:text="  出发地点"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/setout_address"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:maxLength="5"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="#e0e0e0" />
            <!-- 到达日期 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/business_purpcity"
                    android:text="  到达地点"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/arrive_address"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:maxLength="5"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="#e0e0e0" />

            <!-- 出发日期 -->

            <LinearLayout
                android:id="@+id/chufariqi"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/business_depadate"
                    android:text="  出发日期"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setout_date"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="#e0e0e0" />

            <!-- 结束日期 -->

            <LinearLayout
                android:id="@+id/jieshuriqi"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/business_enddate"
                    android:text="  结束日期"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/arrive_date"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="(必填)"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:textColor="#969696"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp" />
                
                <TextView
                    android:id="@+id/replace" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="#e0e0e0" 
                android:visibility="gone"
               />
            <!-- 照片 -->

            <LinearLayout
                android:id="@+id/zhaopian"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:visibility="gone"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="照片"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:padding="15dp"
                    android:clickable="true"
                    android:src="@drawable/visit_img" />

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:padding="15dp"
                    android:clickable="true"
                    android:src="@drawable/visit_img" />

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/list_background"
                    android:padding="15dp"
                    android:clickable="true"
                    android:src="@drawable/visit_img" />

               
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="#e0e0e0"
                android:visibility="gone"
                 />

            <!-- 备注 -->

            <LinearLayout
                android:id="@+id/beizhu"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:gravity="center_vertical"
                 android:visibility="gone"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:paddingRight="20dp"
                    android:text="备注"
                    android:textColor="#646464"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/edt_note"
                    android:ems="10"
                    android:gravity="center_vertical|top"
                    android:hint="请输入备注信息"
                    android:maxLength="200"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textColor="#969696"
                    android:textColorHint="#c8c8c8"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="#e0e0e0" />

            <!-- 菜单栏 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/takephoto"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_background"
                    android:drawableLeft="@drawable/business_takingpicture"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="  拍照"
                    android:textColor="#fa8c35"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/writenote"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_background"
                    android:drawableLeft="@drawable/business_note"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="  备注"
                    android:textColor="#fa8c35"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/setout"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_background"
                    android:drawableLeft="@drawable/business_setout"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="  出发"
                    android:textColor="#21a5de"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="0.0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/list_background"
                    android:drawableLeft="@drawable/business_submit"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="  提交"
                    android:textColor="#039958"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>