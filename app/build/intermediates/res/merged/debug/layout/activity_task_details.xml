<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/back_title"/>
	<include 
	    layout="@layout/task_scroll_top"/>
	<android.support.v4.view.ViewPager
            android:id="@+id/viewpager_miantask"
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:background="#ffffff"/>
	<RelativeLayout 
	    android:id="@+id/task_details_turnlayout"
	    android:layout_width="fill_parent"
	    android:layout_height="65dp"
	    android:gravity="center_vertical"
	    android:background="#f0f0f0">
	    <Button 
	        android:id="@+id/task_details_turn"
	        android:layout_width="85dp"
	        android:layout_height="40dp"
	        android:background="@drawable/detail_turn_send"
	        android:textColor="#fff"
	        android:text="转派"
	        android:textSize="17sp"
	        android:layout_marginLeft="15dp"/>
	    <Button 
	        android:id="@+id/task_details_back"
	        android:layout_width="85dp"
	        android:layout_height="40dp"
	        android:background="@drawable/detail_back"
	        android:textColor="#fff"
	        android:text="退回"
	        android:layout_alignParentRight="true"
	        android:textSize="17sp"
	        android:layout_marginRight="15dp"/>
	</RelativeLayout>
</LinearLayout>
