<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_select" >
    
    <ImageView
        android:id="@+id/group_indicator"
        android:layout_width="12.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14.0dip"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:src="@drawable/indicator_expanded"
        />
     <!--android:visibility="invisible" -->
    <TextView 
        android:id="@+id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/group_indicator"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_7"
        android:textColor="@color/h_black"
        android:layout_marginLeft="@dimen/width_2_80"/>
    
    <TextView 
        android:id="@+id/onlineno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_7"
        android:textColor="@color/r_blue"
        android:layout_toRightOf="@+id/groupname"
        android:layout_marginLeft="@dimen/width_2_80"/>

</RelativeLayout>
