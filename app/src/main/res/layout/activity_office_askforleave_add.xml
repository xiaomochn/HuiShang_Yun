<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- 请假单 -->

    <RelativeLayout
        android:id="@+id/head_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00658f" >

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/title_background" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/headname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:paddingRight="15dp"
                android:text="请假单 "
                android:textColor="#ffffff"
                android:textSize="21sp" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- 出发日期 -->

    <LinearLayout
        android:id="@+id/chufariqi"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/business_depadate"
            android:text="  起始日期"
            android:textColor="#646464"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/startdate"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="(必填)"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:textColor="#969696"
            android:textColorHint="#c8c8c8"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#e0e0e0" />

    <!-- 结束日期 -->

    <LinearLayout
        android:id="@+id/jieshuriqi"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/business_enddate"
            android:text="  结束日期"
            android:textColor="#646464"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/enddate"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="(必填)"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:textColor="#969696"
            android:textColorHint="#c8c8c8"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#e0e0e0"
        android:visibility="gone" />

    <!-- 请假事由 -->

    <LinearLayout
        android:id="@+id/beizhu"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingRight="10dp"
            android:text="请假事由"
            android:textColor="#646464"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edt_note"
            android:ems="10"
            android:gravity="center_vertical|top"
            android:hint="请输入请假事由..."
            android:maxLength="200"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="#969696"
            android:textColorHint="#c8c8c8"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#e0e0e0" />

    <!-- 菜单栏 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/notelayout"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/writenote"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/list_background"
                android:drawableLeft="@drawable/business_note"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="  请假事由"
                android:textColor="#fa8c35"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submitlayout"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/list_background"
                android:drawableLeft="@drawable/business_submit"
                android:gravity="center_vertical|right"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="  提交"
                android:textColor="#039958"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0" >
    </LinearLayout>

</LinearLayout>