<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="@dimen/width_2_80"
    android:background="@color/h_white"
    android:gravity="right">
    
    <LinearLayout 
        style="@style/used_width_match"	android:orientation="horizontal">
        <TextView android:id="@+id/tv_list_chat_item_1"
            style="@style/used_wrap"	android:textIsSelectable="true"
            android:textColor="@color/l_gray"	android:textSize="@dimen/text_4" />
         <TextView android:id="@+id/tv_list_chat_item_2"
            style="@style/used_width_match"	android:textIsSelectable="true"
            android:textColor="@color/theme"	android:textSize="@dimen/text_6" 
            android:gravity="right" />
	</LinearLayout>
	
    <RelativeLayout android:id="@+id/lay_list_chat_item_1"
        style="@style/used_wrap"	android:background="@drawable/feed_comment_bg_1"
        android:padding="@dimen/width_3_80">
        <TextView android:id="@+id/tv_list_chat_item_3" 
            style="@style/used_wrap"	
            android:textColor="@color/h_gray"	android:textSize="@dimen/text_4"
            android:textIsSelectable="true" />    
	</RelativeLayout>
    
    
    <RelativeLayout android:id="@+id/lay_list_chat_item_2"
        style="@style/used_wrap"	android:background="@drawable/feed_comment_bg_1"
        android:padding="@dimen/width_3_80"	>
        <ImageView android:id="@+id/img_list_chat_item_1" 
            style="@style/used_min_8"	
            android:layout_width="@dimen/width_40_80"	
            android:layout_height="@dimen/width_40_80"
            android:contentDescription="@string/hello_world"  />    
	</RelativeLayout>
	
   <LinearLayout android:id="@+id/lay_list_chat_item_3"
        style="@style/used_width_match"	android:orientation="horizontal"
        android:gravity="right|center_vertical">
        <TextView android:id="@+id/tv_list_chat_item_4"
            style="@style/used_wrap"	android:textIsSelectable="true"
            android:textColor="@color/theme"	android:textSize="@dimen/text_4"
            android:gravity="right" 
            android:layout_marginRight="@dimen/width_2_80"	/>
    <RelativeLayout android:id="@+id/lay_list_chat_item_media"
        android:layout_width="wrap_content"	android:layout_height="wrap_content"	
        android:background="@drawable/feed_comment_bg_1"
        android:padding="@dimen/width_3_80"	android:minWidth="@dimen/width_20_80"
        android:gravity="right">
        <ImageView android:id="@+id/img_list_chat_item_2" 
            style="@style/used_min_4"	android:src="@drawable/mystartr2_1"
            android:layout_width="wrap_content"	android:layout_height="wrap_content"	
            android:scaleType="fitCenter" 	android:contentDescription="@string/hello_world"
             />    
	</RelativeLayout>
	</LinearLayout>
	
</LinearLayout>