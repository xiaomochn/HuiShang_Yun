<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/title_work"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_6_80"
        android:background="@drawable/comp_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/comp_setting_back"
            style="@style/used_min_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/hello_world"
            android:layout_alignParentRight="true"
            android:padding="@dimen/width_2_80"
            android:text="取消"
            android:background="@null"
            android:textColor="@color/h_white"
            android:textSize="@dimen/text_6"
             />

        <EditText
            android:id="@+id/et_compan_search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/width_1_80"
            android:layout_marginBottom="@dimen/width_1_80"
            android:layout_marginLeft="@dimen/width_1_80"
            android:background="@drawable/comp_search_bg"
            android:drawableLeft="@drawable/skin_searchbar_icon"
            android:hint="请输入公司名称或简称"
            android:drawablePadding="5dip"
            android:paddingLeft="8dip"
            android:layout_toLeftOf="@+id/comp_setting_back"
            android:textSize="@dimen/text_6"
            android:singleLine="true"
            android:imeOptions="actionSearch" />
    </RelativeLayout>
    <ListView 
        android:id="@+id/comp_setting_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>