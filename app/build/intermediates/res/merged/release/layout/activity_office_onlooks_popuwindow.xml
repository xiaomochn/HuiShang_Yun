<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="150dp"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#166b91"/>
    <LinearLayout 
        android:id="@+id/send_onlooks"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title_background">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/onlooks_add"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="发表围观"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#166b91"/>
    <LinearLayout 
        android:id="@+id/my_onlooks"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title_background">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/onlooks_my"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="我的围观"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#166b91"/>
    <LinearLayout 
        android:id="@+id/my_comment"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/title_background">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/onlooks_mycomment"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="我的评论"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"/>
    </LinearLayout>
    

</LinearLayout>
