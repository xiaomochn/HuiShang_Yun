<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/back_title"/>
	<RadioGroup 
	    android:id="@+id/regis_radio"
	    android:layout_width="fill_parent"
	    android:layout_height="65dp"
	    android:orientation="horizontal"
	    android:background="@drawable/sign_frame_bg">
	     <RadioButton 
	        android:id="@+id/register_search"
	        style="@style/app_regis_top"
	        android:drawableTop="@drawable/register_search"
	        android:text="搜索"
	        android:checked="true"
	        android:textColor="@drawable/register_txt"/>
	     
	     <RadioButton 
	        android:id="@+id/register_regis"
	        style="@style/app_regis_top"
	        android:drawableTop="@drawable/register_regis"
	        android:text="注册新单位"
	        android:textColor="@drawable/register_txt"/>
	     
	</RadioGroup>
	
	<FrameLayout 
	    android:id="@+id/regis_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	</FrameLayout>

</LinearLayout>
