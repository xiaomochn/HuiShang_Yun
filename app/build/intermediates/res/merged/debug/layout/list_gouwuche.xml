<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:id="@+id/view"/>
    
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@drawable/list_background"
	    android:layout_below="@id/view"
		android:id="@+id/middle">
        
        <!-- 产品图片 -->
        <ImageView
		    android:layout_height="75dp"
		    android:layout_width="75dp"
		    android:src="@drawable/defaultimage02"
		    android:layout_marginLeft="15dp"
		    android:id="@+id/img"/>
        
        <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp">	
	        <!-- 产品名称 -->
		    <TextView
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"	        	   			        
		        android:lines="2"
		        android:text="润田翠天然含硒矿泉水润田翠天然含硒矿泉水"
		        android:textSize="16sp"
		        android:textColor="#646464"
		        android:id="@+id/name"/>
	    
		    <!-- 价格 -->
		    <TextView
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_alignParentBottom="true"
		 		android:layout_alignLeft="@id/name"
		        android:id="@+id/price"
		        android:text="￥45.00"
		        android:textSize="14sp"
		        android:textColor="#21a5de"/>
			         
	    <LinearLayout
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"	        	
	        android:layout_toRightOf="@id/price"
	        android:layout_alignBottom="@id/price"
		    android:gravity="right|bottom"
		    android:id="@+id/lin">
	        <!-- 减少数字的图标 -->
		    <ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"   
			    android:layout_gravity="center_vertical"
			    android:src="@drawable/cart_subtract"
			    android:scaleType="center"
			    android:paddingLeft="8dp"
			    android:paddingRight="8dp"			    
			    android:id="@+id/del"/>
		    
		    <!-- 数字的图标 -->
		    <TextView
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_gravity="center_vertical"
		 		android:background="@drawable/cart_inputtext"
		 		android:gravity="center"
		        android:id="@+id/nub"
		        android:text="3"
		        android:textSize="14sp"/>

		    
		   <!-- 增加数字的图标 android:visibility="invisible"-->
		    <ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"	    
			    android:layout_gravity="center_vertical"			    			    
			    android:src="@drawable/cart_add"
			    android:scaleType="center"
			    android:paddingLeft="8dp"
			    android:paddingRight="8dp"
			    android:id="@+id/add"/>	    	    	    
	    </LinearLayout>	   
		</RelativeLayout>
		
        
	    <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content">		    
	        <!-- 删除图标 -->
	        <ImageView
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:paddingLeft="10dp"
			    android:paddingRight="15dp"
			    android:paddingTop="10dp"
			    android:src="@drawable/delete_shopcar"
			    android:scaleType="center"
			    android:layout_alignParentBottom="true"
			    android:id="@+id/delet"/>
		</RelativeLayout>       
	</LinearLayout> 
      	
    <View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:background="#f0f0f0"
        android:layout_below="@id/middle"/>	              
</RelativeLayout>