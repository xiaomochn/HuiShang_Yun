<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
	<RadioGroup 
        android:id="@id/radio_group" 
        android:gravity="center_vertical"  
        android:orientation="horizontal"  
        android:layout_width="fill_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/frame_foot_bg" 
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/radio_button1"
            android:text="@string/new_msg" 
            android:checked="true"
            android:textColor="@drawable/main_button"
            android:drawableTop="@drawable/rbtn_item_select_01" style="@style/main_tab_bottom">
        </RadioButton>
        <RadioButton android:id="@+id/radio_button2" 
            android:text="@string/contacter" 
            android:textColor="@drawable/main_button"
            android:drawableTop="@drawable/rbtn_item_select_02" style="@style/main_tab_bottom" />
        <RadioButton android:id="@+id/radio_button3" 
            android:text="@string/work_space" 
            android:textColor="@drawable/main_button"
            android:drawableTop="@drawable/rbtn_item_select_03" style="@style/main_tab_bottom" />
        <RadioButton android:id="@+id/radio_button4" 
            android:text="@string/setting" 
            android:textColor="@drawable/main_button"
            android:drawableTop="@drawable/rbtn_item_select_04" style="@style/main_tab_bottom" />
         <!-- <RadioButton android:id="@+id/radio_button5" 
            android:text="@string/setting" 
            android:drawableTop="@drawable/rbtn_item_select_05" style="@style/main_tab_bottom" /> -->
	</RadioGroup> 
	<FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center_vertical"  
	    android:background="@null">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:paddingTop="7dp"
                android:gravity="right">
	              <TextView
		            android:id="@+id/new_msg_count"
		            android:layout_width="18dp"
		            android:layout_height="18.0dp"
		            android:layout_marginRight="15.0dp"
		            android:background="@drawable/scree_prompt"
		            android:gravity="center"
		            android:layout_gravity="right"
		            android:includeFontPadding="false"
		            android:shadowColor="#19000000"
		            android:shadowDy="1.0"
		            android:shadowRadius="1.0"
		            android:text="10"
		            android:textColor="#ffffffff"
		            android:textSize="10.0dip"
		            android:visibility="visible"/>
              </LinearLayout> 
             <View 
                  android:layout_width="0.0dip"
                  android:layout_height="1px"
                  android:layout_weight="1.0"/>
              <View 
                  android:layout_width="0.0dip"
                  android:layout_height="1px"
                  android:layout_weight="1.0"/>
              <View 
                  android:layout_width="0.0dip"
                  android:layout_height="1px"
                  android:layout_weight="1.0"/>
              <!-- <View 
                  android:layout_width="0.0dip"
                  android:layout_height="1px"
                  android:layout_weight="1.0"/> -->
	            
	      </LinearLayout>
     </FrameLayout>
	
</FrameLayout>
